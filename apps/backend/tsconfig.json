{
    "extends": "../../tsconfig.base.json",
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
      "compilerOptions": {
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "declaration": true,
        "noEmit": true,
        "types": ["node", "mongoose"],
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
      }
  }